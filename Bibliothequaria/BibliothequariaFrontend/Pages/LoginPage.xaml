<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BibliothequariaFrontend.Controls"
    x:Class="BibliothequariaFrontend.Pages.LoginPage"
    BackgroundColor="#4A4646"
    Padding="20"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto">

        <!-- Row 0: Logo -->
        <Image
      Grid.Row="0"
      Source="yellowbook.png"
      HeightRequest="50"
      HorizontalOptions="Start"
      VerticalOptions="Start" />

        <!-- Row 1: Titles -->
        <StackLayout
      Grid.Row="1"
      VerticalOptions="Center"
      HorizontalOptions="Center"
      Spacing="10">
            <Label
        Text="Welcome to bibliothequaria!"
        FontFamily="PoppinsBold"
        FontSize="24"
        TextColor="White"
        HorizontalOptions="Center" />
            <Label
        Text="Sign in:"
        FontFamily="PoppinsRegular"
        FontSize="18"
        TextColor="White"
        HorizontalOptions="Center" />
        </StackLayout>

        <!-- Row 2: Inputs + Centered Login button -->
        <StackLayout
      Grid.Row="2"
      Spacing="20"
      VerticalOptions="Center"
      HorizontalOptions="Center"
      WidthRequest="400">

            <!-- E-mail address -->
            <Entry
        x:Name="EmailEntry"
        Placeholder="E-mail address"
        Keyboard="Email"
        FontFamily="PoppinsRegular"
        TextColor="White"
        PlaceholderColor="#CCCCCC" />

            <!-- Password -->
            <Entry
        x:Name="PasswordEntry"
        Placeholder="Password"
        IsPassword="True"
        FontFamily="PoppinsRegular"
        TextColor="White"
        PlaceholderColor="#CCCCCC" />

            <!-- Forgot password link -->
            <Label
        Text="Forgot password?"
        FontFamily="PoppinsRegular"
        FontSize="12"
        TextColor="#FDBF1D" />

            <!-- Centered Login button -->
            <controls:BrownButtonStart
        Text="Login"
        Command="{Binding LoginCommand}"
        HorizontalOptions="Center" 
        />
        </StackLayout>

        <!-- Row 3: Back arrow -->
        <Image
      Grid.Row="3"
      Source="backarrow.png"
      HeightRequest="40"
      WidthRequest="40"
      HorizontalOptions="Start"
      VerticalOptions="Center">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackArrowTapped" />
            </Image.GestureRecognizers>
        </Image>

        <!-- Row 4: Footer -->
        <Grid
      Grid.Row="4"
      ColumnDefinitions="Auto,*,Auto"
      Padding="0,10,0,0">
            <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Start">
                <Image Source="yellowbook.png" HeightRequest="20" WidthRequest="20" />
                <Label
          Text="Bibliothequaria"
          FontFamily="PoppinsRegular"
          FontSize="12"
          TextColor="#787676"
          VerticalOptions="Center" />
            </StackLayout>
            <Label
        Grid.Column="1"
        Text="© 2025 Bibliothequaria – All Rights Reserved"
        FontFamily="PoppinsRegular"
        FontSize="12"
        TextColor="#FDBF1D"
        HorizontalOptions="Center"
        Margin="0,0,-85,0"/>
            <StackLayout
        Grid.Column="2"
        Orientation="Horizontal"
        Spacing="10"
        HorizontalOptions="End">
                <Label
          Text="Privacy Policy"
          FontFamily="PoppinsBold"
          FontSize="12"
          TextColor="#FDBF1D" />
                <Label
          Text="Terms of Service"
          FontFamily="PoppinsBold"
          FontSize="12"
          TextColor="#FDBF1D" />
            </StackLayout>
        </Grid>

    </Grid>
</ContentPage>
