<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:BibliothequariaFrontend.Pages"
    x:Class="BibliothequariaFrontend.AppShell"
    Shell.FlyoutBehavior="Disabled">

    <!-- Splash screen as initial route -->
    <ShellContent Route="splash">
        <ShellContent.ContentTemplate>
            <DataTemplate>
                <pages:SplashScreen1 />
            </DataTemplate>
        </ShellContent.ContentTemplate>
    </ShellContent>

    <!-- Main application page -->
    <ShellContent
      Route="main"
      Title="Bibliothequaria"
      Icon="bibliothequarialogo.png">
        <ShellContent.ContentTemplate>
            <DataTemplate>
                <pages:MainPage />
            </DataTemplate>
        </ShellContent.ContentTemplate>
    </ShellContent>

</Shell>
