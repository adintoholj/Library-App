<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="BibliothequariaFrontend.Controls.ProfileMenuPopup">

    <!-- We size and position our card inside the Popup -->
    <Grid Padding="0" HorizontalOptions="End" VerticalOptions="Start">
        <Frame
        BackgroundColor="#E0E0E0"
        CornerRadius="12"
        HasShadow="True"
        Padding="16"
        WidthRequest="300"
        HeightRequest="200">

            <VerticalStackLayout Spacing="12">

                <!-- Avatar + name/email -->
                <HorizontalStackLayout Spacing="12">
                    <Image
            Source="pfp.png"
            HeightRequest="48"
            WidthRequest="48"
            Aspect="AspectFill"
            VerticalOptions="Center" />
                    <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                        <Label
              Text="Adin --------"
              FontAttributes="Bold"
              FontSize="18"
              TextColor="Black" />
                        <Label
              Text="adin@hotmail.com"
              FontSize="14"
              TextColor="Black" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>

                <!-- Last login pill -->
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label
            Text="Last login:"
            FontSize="14"
            TextColor="Black"
            VerticalOptions="Center" />
                    <Frame
            BackgroundColor="#FDBF1D"
            CornerRadius="10"
            Padding="6,2"
            VerticalOptions="Center">
                        <Label
              Text="17/05/2025 at 19:00"
              FontAttributes="Bold"
              FontSize="14"
              TextColor="White" />
                    </Frame>
                </HorizontalStackLayout>

                <!-- More information button -->
                <Button
          Text="More informationâ€¦"
          BackgroundColor="#3A3428"
          TextColor="#FF3333"
          CornerRadius="8"
          HeightRequest="40"
          Clicked="OnMoreInfoClicked"/>

                <!-- Bottom icons -->
                <HorizontalStackLayout
          Spacing="20"
          HorizontalOptions="End"
          VerticalOptions="End">
                    <Image Source="support.png"  HeightRequest="24" WidthRequest="24" />
                    <Image Source="linkedin.png" HeightRequest="24" WidthRequest="24" />
                    <Image Source="mail.png"    HeightRequest="24" WidthRequest="24" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Frame>
    </Grid>
</toolkit:Popup>
