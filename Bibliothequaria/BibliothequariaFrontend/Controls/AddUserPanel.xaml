<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BibliothequariaFrontend.Controls.AddUserPanel"
    x:Name="Root">

    <!-- Card -->
    <Frame Padding="20"
           CornerRadius="14"
           HasShadow="False"
           BackgroundColor="#DBCC99">

        <VerticalStackLayout Spacing="18">

            <!-- Header -->
            <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                <BoxView WidthRequest="6"
                         HeightRequest="24"
                         Color="#FDBF1D"
                         CornerRadius="3"
                         VerticalOptions="Center" />
                <Label Grid.Column="1"
                       Text="Add user"
                       FontFamily="PoppinsBold"
                       FontSize="20"
                       TextColor="Black"
                       Margin="10,0,0,0" />
            </Grid>

            <!-- First name -->
            <Grid RowDefinitions="Auto,1">
                <Entry x:Name="FirstNameEntry"
                       Text="{Binding Source={x:Reference Root}, Path=FirstName}"
                       Placeholder="Name"
                       FontFamily="PoppinsRegular"
                       TextColor="Black"
                       PlaceholderColor="#7A7575"
                       BackgroundColor="Transparent" />
                <BoxView Grid.Row="1" HeightRequest="1" Color="#3A3428" />
            </Grid>

            <!-- Last name -->
            <Grid RowDefinitions="Auto,1">
                <Entry x:Name="LastNameEntry"
                       Text="{Binding Source={x:Reference Root}, Path=LastName}"
                       Placeholder="Last name"
                       FontFamily="PoppinsRegular"
                       TextColor="Black"
                       PlaceholderColor="#7A7575"
                       BackgroundColor="Transparent" />
                <BoxView Grid.Row="1" HeightRequest="1" Color="#3A3428" />
            </Grid>

            <!-- Actions -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="End" Margin="0,6,0,0">

                <!-- Cancel (gray) -->
                <Button Text="Cancel"
                        FontFamily="PoppinsBold"
                        BackgroundColor="#BABABA"
                        TextColor="Black"
                        CornerRadius="8"
                        HeightRequest="44"
                        Padding="18,8"
                        Clicked="OnCancelClicked" />

                <!-- Save (brown) -->
                <Button Text="Add user"
                        FontFamily="PoppinsBold"
                        BackgroundColor="#665A44"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="44"
                        Padding="18,8"
                        Clicked="OnSubmitClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Frame>
</ContentView>
