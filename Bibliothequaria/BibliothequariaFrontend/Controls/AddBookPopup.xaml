<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="BibliothequariaFrontend.Controls.AddBookPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Size="460,440"
    >
    <!-- dimmed overlay -->

    
    <Border
        Stroke="Black"
        StrokeThickness="1"
        BackgroundColor="#E9E7E0"   
        Padding="28">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="14"/>
        </Border.StrokeShape>

        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
              ColumnDefinitions="180,*"
              RowSpacing="16" HorizontalOptions="Center" VerticalOptions="Center">

            <!-- Heading -->
            <Label Grid.ColumnSpan="2"
                   Text="Add a new book"
                   FontFamily="PoppinsBold"
                   FontSize="22"
                   TextColor="Black"
                   Margin="0,0,0,8"/>

            <!-- Title -->
            <Label Grid.Row="1"
                   Text="Title:"  FontFamily="PoppinsBold"
                   TextColor="Black"
                   VerticalTextAlignment="Center"/>
            <Entry Grid.Row="1" Grid.Column="1" x:Name="TitleEntry"
                   Placeholder="e.g. Crime and Punishment"
                   BackgroundColor="#FFFFFF" TextColor="Black"
                   FontFamily="PoppinsRegular"/>

            <!-- Author -->
            <Label Grid.Row="2"
                   Text="Author:" FontFamily="PoppinsBold"
                   TextColor="Black"
                   VerticalTextAlignment="Center"/>
            <Entry Grid.Row="2" Grid.Column="1" x:Name="AuthorEntry"
                   Placeholder="e.g. Fyodor Dostoevsky"
                   BackgroundColor="#FFFFFF" TextColor="Black"
                   FontFamily="PoppinsRegular"/>

            <!-- Genre -->
            <Label Grid.Row="3"
                   Text="Genre:"  FontFamily="PoppinsBold"
                   TextColor="Black"
                   VerticalTextAlignment="Center"/>
            <Entry Grid.Row="3" Grid.Column="1" x:Name="GenreEntry"
                   Placeholder="e.g. Novel"
                   BackgroundColor="#FFFFFF" TextColor="Black"
                   FontFamily="PoppinsRegular"/>

            <!-- Pages -->
            <Label Grid.Row="4"
                   Text="Pages:"  FontFamily="PoppinsBold"
                   TextColor="Black"
                   VerticalTextAlignment="Center"/>
            <Entry Grid.Row="4" Grid.Column="1" x:Name="PagesEntry"
                   Keyboard="Numeric"
                   Placeholder="e.g. 544"
                   BackgroundColor="#FFFFFF" TextColor="Black"
                   FontFamily="PoppinsRegular"/>

            <!-- Buttons + validation -->
            <HorizontalStackLayout Grid.Row="5" Grid.ColumnSpan="2"
                                   Spacing="12" Margin="0,6,0,0"
                                   HorizontalOptions="End">
                <Button Text="Cancel" Clicked="OnCancel"
                        BackgroundColor="#CFCFCF" TextColor="Black"
                        CornerRadius="10" Padding="16,10"/>
                <Button Text="Save"   Clicked="OnSave"
                        BackgroundColor="#3A3428" TextColor="White"
                        CornerRadius="10" Padding="22,10"/>
            </HorizontalStackLayout>

            <Label Grid.Row="5" Grid.ColumnSpan="2"
                   x:Name="ErrorLabel"
                   TextColor="#B00020"
                   FontFamily="PoppinsRegular"
                   IsVisible="False"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   Margin="0,0,160,0"/>
        </Grid>
    </Border>
</toolkit:Popup>
