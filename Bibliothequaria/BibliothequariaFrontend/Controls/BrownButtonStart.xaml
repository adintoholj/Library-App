<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Name="root"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BibliothequariaFrontend.Controls"
    x:Class="BibliothequariaFrontend.Controls.BrownButtonStart">

    <Frame
      BackgroundColor="#665A44"
      CornerRadius="8"
      HeightRequest="50"
      WidthRequest="300"
      HorizontalOptions="Center"
      Padding="0">
        <Label
        Text="{Binding Source={x:Reference root}, Path=Text}"
        FontFamily="PoppinsBold"
        TextColor="White"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        LineBreakMode="WordWrap"
        HorizontalTextAlignment="Center" />
        <Frame.GestureRecognizers>
            <TapGestureRecognizer
        Command="{Binding Source={x:Reference root}, Path=Command}" />
        </Frame.GestureRecognizers>
    </Frame>
</ContentView>
